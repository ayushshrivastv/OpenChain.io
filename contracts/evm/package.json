{
  "name": "cross-chain-lending-evm-contracts",
  "version": "1.0.0",
  "description": "Cross-chain lending and borrowing protocol smart contracts for EVM chains",
  "main": "index.js",
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "deploy": "npx hardhat run scripts/deploy.js",
    "deploy:sepolia": "npx hardhat run scripts/deploy-testnet.js --network sepolia",
    "deploy:mumbai": "npx hardhat run scripts/deploy-testnet.js --network mumbai",
    "deploy:amoy": "npx hardhat run scripts/deploy-testnet.js --network amoy",
    "deploy:layerzero": "npx hardhat run scripts/deploy-layerzero.js --network sepolia",
    "setup:layerzero": "npx hardhat run scripts/setup-layerzero.js",
    "check:sepolia": "npx hardhat run scripts/check-balance.js --network sepolia",
    "check:mumbai": "npx hardhat run scripts/check-balance.js --network mumbai",
    "update-frontend": "node scripts/update-frontend.js",
    "verify:sepolia": "npx hardhat run scripts/verify.js --network sepolia",
    "verify:mumbai": "npx hardhat run scripts/verify.js --network mumbai",
    "setup:assets": "npx hardhat run scripts/setup-assets.js",
    "setup:ccip": "npx hardhat run scripts/setup-ccip.js",
    "clean": "npx hardhat clean",
    "coverage": "npx hardhat coverage",
    "gas-report": "REPORT_GAS=true npx hardhat test",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "size": "npx hardhat size-contracts"
  },
  "dependencies": {
    "@chainlink/contracts": "^1.2.0",
    "@chainlink/contracts-ccip": "^1.6.0",
    "@layerzerolabs/lz-evm-messagelib-v2": "^2.3.3",
    "@layerzerolabs/lz-evm-oapp-v2": "^2.3.3",
    "@layerzerolabs/lz-evm-protocol-v2": "^2.3.3",
    "@openzeppelin/contracts": "^5.3.0",
    "@openzeppelin/contracts-upgradeable": "^5.3.0",
    "@openzeppelin/hardhat-upgrades": "^3.9.0",
    "dotenv": "^16.6.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-ignition": "^0.15.12",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.13",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.13",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@nomicfoundation/ignition-core": "^0.15.12",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.19.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "chai": "^4.3.10",
    "ethers": "^6.10.0",
    "hardhat": "^2.22.0",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.9",
    "solhint": "^5.0.0",
    "solidity-coverage": "^0.8.5",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "defi",
    "lending",
    "borrowing",
    "cross-chain",
    "chainlink",
    "ccip",
    "layerzero",
    "layerzero-v2",
    "ethereum",
    "polygon",
    "solidity"
  ],
  "author": "Cross-Chain DeFi Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/cross-chain-defi-protocol.git"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
